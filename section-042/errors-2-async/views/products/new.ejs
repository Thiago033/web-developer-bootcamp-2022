<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Product</title>
</head>

<body>

    <h1>Add A Product</h1>
    <form action="/products" method="post">

        <label for="name">Insert the product name:</label>
        <input type="text" name="name" id="name" placeholder="Product Name">

        <label for="price">Insert the product price:</label>
        <input type="number" name="price" id="price" placeholder="Product Price">

        <label for="category">Select the product category:</label>
        <select name="category" id="category">
            <% for (let category of categories) { %>
                <option value="<%= category %>"><%= category %></option>
            <% } %>  
        </select>

        <button>Submit</button>

    </form>

    <a href="/products">All Products</a>
</body>

</html>